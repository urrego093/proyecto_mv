---


- name: Install local key to CentOS System
  connection: local  
  shell: "/usr/bin/sshpass -p {{ CentOS.pass }} ssh-copy-id -o StrictHostKeyChecking=no {{ CentOS.user }}@{{ IP }}"
  when: OS == "CentOS"


- name: Install local key to Fedora System
  connection: local
  shell: "/usr/bin/sshpass -p {{ Fedora.pass }} ssh-copy-id -o StrictHostKeyChecking=no {{ Fedora.user }}@{{ IP }}"
  when: OS == "Fedora"

- name: Install local key to Ubuntu System
  connection: local  
  shell: "/usr/bin/sshpass -p {{ Ubuntu.pass }} ssh-copy-id -o StrictHostKeyChecking=no {{ Ubuntu.user }}@{{ IP }}"
  when: OS  == "Ubuntu"

- name: Install local key to Debian System
  connection: local
  shell: "/usr/bin/sshpass -p {{ Debian.pass }} ssh-copy-id -o StrictHostKeyChecking=no {{ Debian.user }}@{{ IP }}"
  when: OS == "Debian"

...
